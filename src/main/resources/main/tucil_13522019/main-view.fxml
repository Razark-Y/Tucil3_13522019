<VBox alignment="TOP_CENTER" prefHeight="497.0" prefWidth="619.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.tucil_13522019.MainController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <children>
      <Label alignment="CENTER" contentDisplay="CENTER" text="Word Ladder Game" textFill="#0c4d46">
         <font>
            <Font name="Cooper Black" size="25.0" />
         </font>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="20.0" />
         </padding>
      </Label>
      <FlowPane alignment="CENTER" hgap="40.0" prefHeight="31.0" prefWidth="598.0">
         <children>
            <Label alignment="TOP_LEFT" text="Number Of Words:" textFill="#0c4d46">
               <font>
                  <Font name="Cooper Black" size="19.0" />
               </font>
               <opaqueInsets>
                  <Insets right="30.0" />
               </opaqueInsets>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
              <TextField fx:id="widthInput" alignment="TOP_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="26.0" prefWidth="310.0" promptText="Enter width" text="3">
               <opaqueInsets>
                  <Insets left="30.0" />
               </opaqueInsets>
            </TextField>
         </children>
         <padding>
            <Insets bottom="20.0" />
         </padding>
      </FlowPane>
        <StackPane fx:id="clickableArea" alignment="CENTER" onMouseClicked="#onRectangleClicked" xmlns:fx="http://javafx.com/fxml/1">
            <Rectangle arcHeight="10" arcWidth="10" fill="#0c4d46" height="30.0" width="120">
            <StackPane.margin>
               <Insets />
            </StackPane.margin></Rectangle>
            <Label fx:id="rectangleLabel" text="Generate" textFill="#2a8278">
                <font>
                    <Font name="Cooper Black" size="14.0" />
                </font>
            </Label>
        </StackPane>
        <GridPane fx:id="grid" alignment="CENTER" styleClass="grid-pane" stylesheets="@styles.css">
            <padding>
                <Insets top="20.0" />
            </padding>
            <!-- GridPane where the dynamic grid will be displayed -->
        </GridPane>
    </children>
</VBox>
